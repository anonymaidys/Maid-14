<controls:CharacterPreferencesWidget xmlns="https://spacestation14.io"
                                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                     xmlns:controls="clr-namespace:Content.Client._Maid.Lobby.UI">
    <PanelContainer HorizontalExpand="True">
        <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True"
                      Margin="8 8 8 8">
            <Label Text="{Loc character-preference-job-label}" StyleClasses="LabelHeading"
                   HorizontalAlignment="Center" Margin="0 8 0 4"/>
            <BoxContainer Orientation="Vertical" HorizontalExpand="True"
                          HorizontalAlignment="Center" SeparationOverride="4"
                          Name="HighPriorityJobContainer"/>
            <Control MinSize="0 10"/>
            <Label Text="{Loc character-preference-antag-label}" StyleClasses="LabelHeading"
                   HorizontalAlignment="Center" Margin="0 0 0 8"/>
            <BoxContainer Orientation="Vertical" HorizontalExpand="True"
                          HorizontalAlignment="Center" SeparationOverride="8"
                          Name="AntagGridContainer"/>
        </BoxContainer>
    </PanelContainer>
</controls:CharacterPreferencesWidget>
