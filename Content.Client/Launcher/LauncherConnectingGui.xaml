<Control xmlns="https://spacestation14.io"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:menu="clr-namespace:Content.Client._Maid.MainMenu">
    <menu:ShadedTextureRect TexturePath="/Textures/Logo/logo.png" ShaderName="MonochromeSignalDrift" Stretch="KeepAspectCentered" Name="Background"/>
    <PanelContainer MinWidth="900" StyleClasses="MaidTexturedBackground" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="4" MinHeight="60">
        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="8">
             <Control HorizontalExpand="True" HorizontalAlignment="Center">
                <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <BoxContainer Orientation="Horizontal" Name="ConnectingStatus" VerticalAlignment="Center">
                        <Label StyleClasses="LabelHeading" Text="{Loc 'connecting-in-progress'}" Align="Center" Margin="0 0 12 0" />
                        <Label Name="ConnectStatus" StyleClasses="LabelHeading" Align="Center" />
                    </BoxContainer>
                    <BoxContainer Orientation="Horizontal" Name="Disconnected" Visible="False" VerticalAlignment="Center">
                        <Label Text="{Loc 'connecting-disconnected'}" StyleClasses="LabelHeading" Align="Center" Margin="0 0 12 0" />
                        <Label Name="DisconnectReason" StyleClasses="LabelHeading" Align="Center" />
                    </BoxContainer>
                    <PanelContainer Name="ConnectFail" HorizontalAlignment="Center" VerticalAlignment="Center" Visible="False">
                        <RichTextLabel Name="ConnectFailReason" HorizontalAlignment="Center" />
                    </PanelContainer>
                </BoxContainer>
            </Control>

            <BoxContainer Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Name="ExitButton" StyleClasses="ButtonBig" Text="{Loc 'connecting-exit'}" Margin="2 0" />
                <Button Name="RetryButton" StyleClasses="ButtonBig" Text="{Loc 'connecting-retry'}" Margin="2 0" Visible="False" />
                <Button Name="ReconnectButton" StyleClasses="ButtonBig" Text="{Loc 'connecting-reconnect'}" Margin="2 0" Visible="False" />
                <Button Name="RedialButton" StyleClasses="ButtonBig" Text="{Loc 'connecting-redial'}" Margin="2 0" Disabled="True" Visible="False" />
            </BoxContainer>
        </BoxContainer>
    </PanelContainer>

    <PanelContainer HorizontalAlignment="Left" VerticalAlignment="Bottom">
        <Label Name="ConnectingAddress" StyleClasses="LabelSubText" Margin="4" VerticalAlignment="Bottom" />
    </PanelContainer>
</Control>
